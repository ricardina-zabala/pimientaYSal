<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

  <body>

    <%- include('./partials/header') %>

      <!-- Page content -->
      <div class="ps-content">

        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
          <div class="ps-col l6 ps-padding-large">
            <h1 class="ps-center">
              <%= menuFind.title %>
            </h1>
            <br />
            <h4>
              <%= menuFind.description %>
            </h4>

            <% if (!menuFind.description_completed){ %>
              <h4>Plato tipico</h4>
              <% } else { %>
                <h4>
                  <%=menuFind.description_completed %>
                </h4>
                <% } %>
                  <p class="ps-text-grey">
                    <%= menuFind.price %>
                  </p>
          </div>

          <div class="ps-col l6 ps-padding-large ps-img-menu">
            <img src="<%= menuFind.image %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
          </div>
        </div>

        <!-- Footer -->
        <%- include('./partials/footer') %>
      </div>
  </body>

</html>